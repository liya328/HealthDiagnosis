<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HealthDiagnosisActivity" >

    <GridView
        android:id="@+id/diagnosis_items_gridview"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:columnWidth="80dp"
        android:numColumns="3"
        android:gravity="center"
        android:horizontalSpacing="25dp"
        android:paddingBottom="25dp"
        android:paddingTop="25dp"
        android:verticalSpacing="25dp" >
    </GridView>

	<LinearLayout
	    android:layout_width="100dp"
	    android:layout_height="100dp"
	    android:layout_below="@id/diagnosis_items_gridview"
	    android:orientation="vertical"
	    android:background="@color/bamboo_green"
	    >
    
    <com.health.healthdiagnosis.ui.InputImageView
        android:id="@+id/add_diagnosis_gridview_item"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:clickable="true"
        android:background="@drawable/action_adding"
        >
    </com.health.healthdiagnosis.ui.InputImageView>
    
	</LinearLayout>

</RelativeLayout>
